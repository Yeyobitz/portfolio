---
import ContactForm from './ContactForm.astro';

interface Props {
  email: string;
  profiles: Array<{
    network: string;
    url: string;
  }>;
}

const { email, profiles } = Astro.props;
---

<section class="contact-section" id="contact">
  <div class="terminal-header">
    <div class="terminal-buttons">
      <span></span>
      <span></span>
      <span></span>
    </div>
    <h2 class="glitch">CONTACT.EXE</h2>
  </div>

  <div class="contact-content">
    <div class="contact-info">
      <p class="contact-text">
        > Booting up contact protocol...
      </p>
      <p class="contact-text">
        > Available channels:
      </p>
      <div class="social-links">
        <a href={`mailto:${email}`} class="social-link">
          EMAIL.exe
        </a>
        {profiles.map(profile => (
          <a 
            href={profile.url} 
            target="_blank" 
            rel="noopener noreferrer"
            class="social-link"
          >
            {profile.network.toUpperCase()}.exe
          </a>
        ))}
      </div>
    </div>

    <ContactForm />
  </div>

  <div class="background-grid"></div>
</section>

<style>
  .contact-section {
    position: relative;
    margin: 4rem 0;
    background: var(--color-bg-secondary);
    border: 2px solid var(--color-accent-purple);
    border-radius: 12px;
    overflow: hidden;
  }

  .terminal-header {
    background: var(--color-bg-tertiary);
    padding: 1rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    border-bottom: 2px solid var(--color-accent-purple);
  }

  .terminal-buttons {
    display: flex;
    gap: 0.5rem;
  }

  .terminal-buttons span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--color-accent-purple);
    opacity: 0.5;
  }

  h2 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin: 0;
    color: var(--color-accent-green);
    text-shadow: var(--glow-green);
    letter-spacing: 0.2em;
  }

  .contact-content {
    position: relative;
    z-index: 1;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .contact-info {
    text-align: center;
    margin-bottom: 1rem;
  }

  .contact-text {
    font-family: var(--font-mono);
    color: var(--color-accent-green);
    margin: 0.5rem 0;
    text-shadow: var(--glow-green);
  }

  .social-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 1rem;
  }

  .social-link {
    padding: 0.5rem 1rem;
    background: var(--color-bg-tertiary);
    border: 1px solid var(--color-accent-blue);
    color: var(--color-accent-blue);
    text-decoration: none;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: var(--color-accent-blue);
    color: var(--color-bg-primary);
    box-shadow: 0 0 15px var(--color-accent-blue);
  }

  .background-grid {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      linear-gradient(90deg, rgba(var(--accent-light), 0.05) 1px, transparent 1px),
      linear-gradient(rgba(var(--accent-light), 0.05) 1px, transparent 1px);
    background-size: 2rem 2rem;
    pointer-events: none;
    z-index: 0;
  }

  @media (max-width: 768px) {
    .contact-content {
      padding: 1rem;
    }

    h2 {
      font-size: 1.2rem;
    }

    .social-links {
      gap: 0.5rem;
    }

    .social-link {
      font-size: 0.8rem;
      padding: 0.4rem 0.8rem;
    }
  }
</style> 