---
import type { Project } from '../types/cv';

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;

// Sort projects: active first, then by name
const sortedProjects = [...projects].sort((a, b) => {
  if (a.isActive === b.isActive) {
    return a.name.localeCompare(b.name);
  }
  return a.isActive ? -1 : 1;
});
---

<section class="projects" id="projects">
  <h2>Projects</h2>
  <div class="projects-grid">
    {sortedProjects.map((project) => (
      <article class={`project-card ${!project.isActive ? 'inactive' : ''}`}>
        <div class="project-header">
          <h3>{project.name}</h3>
          {!project.isActive && <span class="archive-badge">Archived</span>}
        </div>
        <p>{project.description}</p>
        <ul class="highlights">
          {project.highlights.map((highlight) => (
            <li>{highlight}</li>
          ))}
        </ul>
        <div class="project-links">
          {project.url && (
            <a href={project.url} class="button" target="_blank" rel="noopener noreferrer">
              View Project
            </a>
          )}
          {project.github && (
            <a href={project.github} class="button" target="_blank" rel="noopener noreferrer">
              GitHub
            </a>
          )}
        </div>
      </article>
    ))}
  </div>
</section>

<style>
  .projects {
    margin: 4rem 0;
    padding: 2rem;
    border-radius: 8px;
    background: rgba(var(--accent-dark), 0.2);
  }

  h2 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    color: rgb(var(--accent-light));
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .project-card {
    padding: 1.5rem;
    border-radius: 8px;
    background: rgba(var(--accent-dark), 0.5);
    transition: transform 0.2s;
  }

  .project-card:hover {
    transform: translateY(-5px);
  }

  .project-card.inactive {
    opacity: 0.7;
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .project-card h3 {
    color: rgb(var(--accent-light));
    margin: 0;
  }

  .archive-badge {
    font-size: 0.8rem;
    padding: 0.2rem 0.5rem;
    background: rgba(var(--accent), 0.2);
    border: 1px solid rgb(var(--accent));
    border-radius: 4px;
    color: rgb(var(--accent-light));
  }

  .highlights {
    list-style: disc;
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .project-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .button {
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    background: rgb(var(--accent));
    color: white;
    text-decoration: none;
    transition: background-color 0.2s;
  }

  .button:hover {
    background: rgb(var(--accent-light));
    color: rgb(var(--accent-dark));
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>