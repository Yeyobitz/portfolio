---
interface Props {
  name: string;
  label: string;
  image: string;
}

const { name, label, image } = Astro.props;
---

<section class="hero">
  <img src={image} alt={name} class="profile-image" />
  <h1>{name}</h1>
  <p class="subtitle">{label}</p>
</section>

<style>
  .hero {
    height: 90vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
  }

  .profile-image {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    margin-bottom: 2rem;
    border: 4px solid rgb(var(--accent-light));
  }

  h1 {
    font-size: 5rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 0.5em;
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  .subtitle {
    font-size: 1.5rem;
    color: rgb(var(--accent-light));
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 3rem;
    }
  }
</style>