---
import TerminalHeader from './TerminalHeader.astro';

interface Props {
  summary: string;
}

const { summary } = Astro.props;
---

<section class="about crt" id="about">
  <TerminalHeader title="ABOUT_ME.EXE" />
  <div class="terminal-content">
    <p class="typewriter">{summary}</p>
  </div>
</section>

<style>
  .about {
    margin: 4rem 0;
    background: var(--color-bg-secondary);
    border: 2px solid var(--color-accent-purple);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 0 30px rgba(var(--accent), 0.1);
  }

  .terminal-content {
    padding: 2rem;
  }

  .typewriter {
    font-family: var(--font-mono);
    line-height: 1.6;
    color: var(--color-text);
    opacity: 0;
    animation: fadeIn 0.5s ease forwards;
    position: relative;
  }

  .typewriter::after {
    content: "_";
    position: absolute;
    right: -1ch;
    animation: blink 1s step-end infinite;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  @media (max-width: 768px) {
    .terminal-content {
      padding: 1rem;
    }
  }
</style>