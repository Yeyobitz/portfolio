<section id="contact" class="contact-section">
  <div class="terminal-container">
    <div class="terminal-header">
      <span class="terminal-button"></span>
      <span class="terminal-button"></span>
      <span class="terminal-button"></span>
      <h2 class="terminal-title">CONTACT.EXE</h2>
    </div>

    <form 
      name="contact" 
      method="POST" 
      data-netlify="true"
      class="terminal-content"
      netlify-honeypot="bot-field"
      action="/success"
      id="contact-form"
    >
      <p class="hidden">
        <label>
          Don't fill this out if you're human: <input name="bot-field" />
        </label>
      </p>
      
      <input type="hidden" name="form-name" value="contact" />
      
      <div class="form-group">
        <label for="name">$ USER.name:</label>
        <input type="text" id="name" name="name" required>
      </div>

      <div class="form-group">
        <label for="email">$ USER.email:</label>
        <input type="email" id="email" name="email" required>
      </div>

      <div class="form-group">
        <label for="message">$ USER.message:</label>
        <textarea id="message" name="message" required></textarea>
      </div>

      <button type="submit" class="submit-btn">
        SEND_MESSAGE.exe
      </button>

      <div id="form-status" class="form-status"></div>
    </form>
  </div>
</section>

<style>
  .contact-section {
    padding: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .terminal-container {
    background: rgba(var(--accent-dark), 0.2);
    border: 2px solid rgb(var(--accent));
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 
      0 0 20px rgba(var(--accent), 0.1),
      0 0 40px rgba(var(--accent), 0.05);
  }

  .terminal-header {
    background: rgb(var(--accent-dark));
    padding: 0.5rem 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .terminal-button {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
  }

  .terminal-title {
    color: var(--color-accent-green);
    font-family: var(--font-mono);
    font-size: 1rem;
    margin: 0;
    margin-left: 1rem;
    text-shadow: 0 0 10px rgba(0, 255, 65, 0.5);
  }

  .terminal-content {
    padding: 2rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  label {
    display: block;
    color: var(--color-accent-blue);
    font-family: var(--font-mono);
    margin-bottom: 0.5rem;
    text-shadow: 0 0 10px rgba(0, 240, 255, 0.5);
  }

  input, textarea {
    width: 100%;
    padding: 0.75rem;
    background: rgba(var(--accent-dark), 0.3);
    border: 1px solid rgb(var(--accent));
    border-radius: 4px;
    color: var(--color-text);
    font-family: var(--font-mono);
    resize: vertical;
  }

  textarea {
    min-height: 150px;
  }

  input:focus, textarea:focus {
    outline: none;
    border-color: rgb(var(--accent-light));
    box-shadow: 0 0 10px rgba(var(--accent-light), 0.3);
  }

  .submit-btn {
    background: rgb(var(--accent));
    color: white;
    border: none;
    padding: 0.75rem 2rem;
    border-radius: 4px;
    font-family: var(--font-mono);
    cursor: pointer;
    transition: all 0.3s ease;
    border: 1px solid transparent;
  }

  .submit-btn:hover {
    background: transparent;
    border-color: rgb(var(--accent-light));
    color: rgb(var(--accent-light));
    text-shadow: 0 0 5px rgba(var(--accent-light), 0.5);
  }

  .submit-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .hidden {
    display: none;
  }

  .form-status {
    margin-top: 1rem;
    text-align: center;
    font-family: var(--font-mono);
    min-height: 24px;
  }

  .form-status.success {
    color: var(--color-accent-green);
    text-shadow: 0 0 10px rgba(0, 255, 65, 0.5);
  }

  .form-status.error {
    color: #ff4444;
    text-shadow: 0 0 10px rgba(255, 68, 68, 0.5);
  }

  @media (max-width: 768px) {
    .contact-section {
      padding: 1rem;
    }

    .terminal-content {
      padding: 1rem;
    }
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contact-form');
    const status = document.getElementById('form-status');
    const submitButton = form?.querySelector('button[type="submit"]');

    if (form && status && submitButton) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // Deshabilitar el botón y mostrar estado de carga
        submitButton.disabled = true;
        submitButton.textContent = 'SENDING...';
        status.textContent = '';
        status.className = 'form-status';

        try {
          const formData = new FormData(form);
          
          const response = await fetch('/', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: new URLSearchParams(formData).toString()
          });

          if (!response.ok) throw new Error('Network response was not ok');

          // Éxito
          submitButton.textContent = 'SENT!';
          status.textContent = '> Message sent successfully!';
          status.classList.add('success');
          form.reset();

        } catch (error) {
          // Error
          console.error('Error:', error);
          submitButton.textContent = 'ERROR!';
          status.textContent = '> Error: Failed to send message. Please try again.';
          status.classList.add('error');
        }

        // Restaurar botón después de 3 segundos
        setTimeout(() => {
          submitButton.disabled = false;
          submitButton.textContent = 'SEND_MESSAGE.exe';
        }, 3000);
      });
    }
  });
</script>