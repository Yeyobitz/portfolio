---
interface Props {
  url?: string;
  github?: string;
}

const { url, github } = Astro.props;
---

<div class="project-links">
  {url && (
    <a href={url} class="btn btn-blue" target="_blank" rel="noopener noreferrer">
      <div class="btn-content">
        <span class="btn-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M21 13v10h-21v-19h12v2h-10v15h17v-8h2zm3-12h-10.988l4.035 4-6.977 7.07 2.828 2.828 6.977-7.07 4.125 4.172v-11z"/>
          </svg>
        </span>
        <span class="btn-text">VIEW_PROJECT.exe</span>
      </div>
      <div class="btn-glitch"></div>
      <div class="btn-scanline"></div>
    </a>
  )}
  {github && (
    <a href={github} class="btn btn-purple" target="_blank" rel="noopener noreferrer">
      <div class="btn-content">
        <span class="btn-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z"/>
          </svg>
        </span>
        <span class="btn-text">GITHUB.exe</span>
      </div>
      <div class="btn-glitch"></div>
      <div class="btn-scanline"></div>
    </a>
  )}
</div>

<style>
  .project-links {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
    justify-content: center;
  }

  .btn {
    position: relative;
    background: var(--color-bg-tertiary);
    border-radius: 8px;
    padding: 1rem;
    text-decoration: none;
    overflow: hidden;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    min-width: 180px;
  }

  .btn-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .btn-icon {
    width: 1.5rem;
    height: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    filter: grayscale(1);
    transition: all 0.3s ease;
  }

  .btn-icon svg {
    width: 100%;
    height: 100%;
  }

  .btn-text {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    letter-spacing: 0.1em;
  }

  .btn-blue {
    color: var(--color-accent-blue);
    border-color: var(--color-accent-blue);
  }

  .btn-purple {
    color: var(--color-accent-purple);
    border-color: var(--color-accent-purple);
  }

  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
  }

  .btn:hover .btn-icon {
    filter: grayscale(0);
    transform: scale(1.2);
  }

  .btn-scanline {
    position: absolute;
    top: 0;
    left: -100%;
    width: 300%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      rgba(255, 255, 255, 0.05) 50%,
      transparent 100%
    );
    animation: scan 3s linear infinite;
  }

  .btn-glitch {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    background: currentColor;
    z-index: 1;
  }

  .btn:hover .btn-glitch {
    opacity: 0.1;
    animation: glitch 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94) both infinite;
  }

  @keyframes scan {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(33.33%);
    }
  }

  @keyframes glitch {
    0% {
      transform: translate(0);
    }
    20% {
      transform: translate(-2px, 2px);
    }
    40% {
      transform: translate(-2px, -2px);
    }
    60% {
      transform: translate(2px, 2px);
    }
    80% {
      transform: translate(2px, -2px);
    }
    100% {
      transform: translate(0);
    }
  }

  @media (max-width: 768px) {
    .project-links {
      flex-direction: column;
      align-items: stretch;
    }

    .btn {
      width: 100%;
      padding: 0.75rem;
    }

    .btn-icon {
      width: 1.25rem;
      height: 1.25rem;
    }

    .btn-text {
      font-size: 0.7rem;
    }
  }
</style>