---
import type { Project } from '../../types/cv';
import ProjectCard from './ProjectCard.astro';

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;

// Sort projects: active first, then by name
const sortedProjects = [...projects].sort((a, b) => {
  if (a.isActive === b.isActive) {
    return a.name.localeCompare(b.name);
  }
  return a.isActive ? -1 : 1;
});
---

<section class="projects crt" id="projects">
  <div class="terminal-header">
    <div class="terminal-buttons">
      <span></span>
      <span></span>
      <span></span>
    </div>
    <h2 class="glitch">PROJECTS.EXE</h2>
  </div>
  <div class="terminal-content">
    <div class="projects-grid">
      {sortedProjects.map((project) => (
        <ProjectCard project={project} />
      ))}
    </div>
  </div>
</section>

<style>
  .projects {
    margin: 4rem 0;
    background: var(--color-bg-secondary);
    border: 2px solid var(--color-accent-purple);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 0 30px rgba(var(--accent), 0.1);
  }

  .terminal-header {
    background: var(--color-bg-tertiary);
    padding: 1rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    border-bottom: 2px solid var(--color-accent-purple);
  }

  .terminal-buttons {
    display: flex;
    gap: 0.5rem;
  }

  .terminal-buttons span {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--color-accent-purple);
    opacity: 0.5;
  }

  h2 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin: 0;
    color: var(--color-accent-green);
    text-shadow: 0 0 10px var(--color-accent-green);
    letter-spacing: 0.2em;
  }

  .terminal-content {
    padding: 2rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .terminal-content {
      padding: 1rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }

    h2 {
      font-size: 1.2rem;
    }
  }
</style>